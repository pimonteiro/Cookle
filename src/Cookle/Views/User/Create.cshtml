                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Voz" /> @Html.DisplayNameFor(model => model.Voz)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Rua" class="control-label"></label>
                <select asp-for="Rua" class ="form-control" asp-items="ViewBag.Rua"></select>
            </div>
            <div class="form-group">
                <label asp-for="Cidade" class="control-label"></label>
                <select asp-for="Cidade" class ="form-control" asp-items="ViewBag.Cidade"></select>
            </div>
            <div class="form-group">
                <label asp-for="CodigoPostal" class="control-label"></label>
                <select asp-for="CodigoPostal" class ="form-control" asp-items="ViewBag.CodigoPostal"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

