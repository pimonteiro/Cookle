        <h3 class="name">Favoritos</h3>
        {
            foreach ( h in Model.Historicos)
            {
                <p class="description" style="margin: 5px;">h.Receita.Nome</p>
            }
        }
    </div>
        -->
        </div>
        <div class="row d-xl-flex justify-content-xl-center articles">
            <div class="col-sm-6 col-md-6 col-xl-4 item">
                <a asp-action="" asp-controller=""><i class="fas fa-history icon" style="color: rgb(249,63,35);font-size: 40px;"></i></a>
                @{
                    foreach (Historico h in Model.Historicos)
                    {
                        <p class="description" style="margin: 5px;">@h.Receita.Nome</p>
                    }
                }
            </div>
            <div class="col-sm-6 col-md-6 col-xl-4 item">
                <a asp-action="" asp-controller=""><i class="far fa-calendar icon" style="color: rgb(249,63,35);font-size: 40px;"></i></a>
                <h3 class="name">Plano Semanal</h3>
                @{
                    foreach (Plano p in Model.Planos)
                    {
                        <p class="description">@p.Receita.Nome</p>
                    }
                }
            </div>
        </div>
    </div>
</div>
