@model Cookle.Models.User

@{
    ViewData["Title"] = "Home Page";
}

<section class="border rounded d-flex justify-content-center align-items-center align-content-center justify-content-xl-center align-items-xl-center clean-block" style="color: rgba(71,62,62,0.3);background-image: url(&quot;https://www.simplyrecipes.com/wp-content/uploads/2014/11/turkey-soup-horiz-a-1600.jpg&quot;);opacity: 1;font-size: 25px;min-height: 680px;background-repeat: no-repeat;background-size: cover;background-position: center;">
    <a class="btn btn-primary btn-lg text-uppercase text-center text-sm-center text-md-center text-lg-center text-xl-center border rounded border-white shadow-none d-sm-flex d-md-flex d-lg-flex d-xl-flex justify-content-center align-items-center align-content-center align-items-sm-center align-items-md-center align-items-lg-center justify-content-xl-center"
        role="button" href="index.html" data-bs-hover-animate="pulse" style="background-color: rgba(249,63,35,0.8);color: rgb(255,255,255);height: 130px;width: 400px;font-size: 30px;font-family: Montserrat, sans-serif;">Comece a cozinhar</a>
</section>
<section class="clean-block features"></section>
<div class="article-list">
    <div class="container">
        <div class="row d-xl-flex justify-content-xl-center align-items-xl-center articles" style="padding: 0px;height: 300px;">
            <div class="col-sm-6 col-md-6 col-xl-4 offset-xl-0 item" style="height: 300px;">
                <a href="#"><i class="material-icons icon" style="color: rgb(249,63,35);font-size: 40px;">restaurant_menu</i></a>
                <h3 class="name" style="font-size: 16px;">Frigorífico</h3>
                @{
                    foreach (Frigorifico f in Model.Frigorificos)
                    {
                        <p class="description" style="margin: 5px;">@f.Ingrediente.Nome</p>
                    }
                }
            </div>
