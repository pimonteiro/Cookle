@model Cookle.Models.User

@{
    ViewData["Title"] = "Historico";
}

<section class="clean-block clean-pricing dark">
    <div class="container">
        <div class="block-heading">
            <h2 class="text-info" style="margin-top: 36px;">Hist√≥rico de Receitas</h2>
        </div>
        <div class="table-responsive">
            <table class="table">
                <thead>
                    <tr>
                        <th style="width:13px;"></th>
                        <th>Receita</th>
                        <th>Data</th>
                    </tr>
                </thead>
                <tbody>
                    @{ 
                        foreach(Historico h in Model.Historicos)
                        {
                                        <tr>
                                            <td class="float-none"><a asp-controller="" asp-action="" asp-route-id="@h.Numero"><i class="fa fa-remove" style="color:red;"></i></a></td>
                                            <td>@h.Receita.Nome</td>
                                            <td>@h.UltimaVez</td>
                                        </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
