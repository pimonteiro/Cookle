@model Cookle.Models.User

@{
    ViewData["Title"] = "Registo";
}

<div class="container">
    <section class="clean-block about-us">
        <h2 class="text-center text-info" style="margin-top: 85px;margin-left: 10px;margin-bottom: 10px;">Registo</h2>
            <form method="post" asp-controller="" asp-action="">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label asp-for="Email">Email</label>
                    <input asp-for="Email" class="form-control" placeholder="Email"/>
                </div>
                <div class="form-group col-md-6">
                    <label asp-for="UserName">Nome</label>
                    <input asp-for="UserName" class="form-control" placeholder="Nome">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputAddress">Data de Nascimento</label>
                    <input type="date" class="form-control" id="inputBirthday" placeholder="1234 Main St">
                </div>
                <div class="form-group col-md-6">
                    <label for="inputSex">Sexo</label>
                    <select id="inputSex" class="form-control">
                        <option value="@Sexo.M"selected>Masculino</option>
                        <option value="@Sexo.F">Feminino</option>
                        <option value="@Sexo.NA">Outro</option>
                    </select>
                </div>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
                <label class="form-check-label" for="defaultCheck1">
                    Permito que a aplicação tenha acesso ao microfone e à câmara.
                </label>
            </div>
            <div class="form-group">
            </div>
        </form>
        <div>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Alimentos excluídos</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>laticínios</td>
                            <td></td>
                        </tr>
                        <tr>
                            <td></td>
                            <td><button class="btn btn-primary float-right" type="button">Adicionar</button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
        <div style="text-align:center;"><input class="btn btn-primary" type="submit" style="align-content:center;">Registar</div>
    </section>
</div>
